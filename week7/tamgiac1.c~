#include <stdio.h>
main()
{
  int x,y,a,b,n;
  printf("Height: \n"); scanf("%d",&n);
  a=n/2+1;
  b=n/2+1;
  for (y=1;y<=n/2+1;y++){
    for(x=1;x<=n/2+1;x++)
      printf("%c",x<a?' ':'*');
      a--;
    for(x=n/2+2;x<=n;x++)
	       printf("%c",x<=b?'*':' ');
	       b++;
    printf("\n");
    for(y=n/2+2;y<=n;y++){
      for(x=1;x<=n/2+1;x++)
	printf("%c",x>=a-1?'*':' ');
      a++;
      for(x=n/2+2;x<=n;x++)
	printf("%c",x<=b+1?'*':' ');
      b--;
      printf"\n");
  }
}
    
